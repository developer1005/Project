<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" >
		
		    <LinearLayout
		        android:id="@+id/weekLayout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical" >
		        
		        <TextView
			        android:id="@+id/textView1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="16sp"
			        android:text="Hàng tuần vào"
			        android:layout_marginBottom="10dp" />
					
		        <TableLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		
		            <TableRow
		                android:id="@+id/tableRow1"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingBottom="20dp" >
		
		                <CheckBox
		                    android:id="@+id/checkBoxTh2"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 2" />
		
		                <CheckBox
		                    android:id="@+id/checkBoxTh3"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 3" />
		
		                <CheckBox
		                    android:id="@+id/checkBoxTh4"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 4" />
		            </TableRow>
		
		            <TableRow
		                android:id="@+id/tableRow2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingBottom="20dp" >
		
		                <CheckBox
		                    android:id="@+id/checkBoxTh5"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 5" />
		
		                <CheckBox
		                    android:id="@+id/checkBoxTh6"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 6" />
		
		                <CheckBox
		                    android:id="@+id/checkBox"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 6"
		                    android:visibility="invisible" />
		            </TableRow>
		
		            <TableRow
		                android:id="@+id/tableRow3"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content" >
		
		                <CheckBox
		                    android:id="@+id/checkBoxTh7"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 7" />
		
		                <CheckBox
		                    android:id="@+id/checkBoxCN"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="CN  " />
		
		                <CheckBox
		                    android:id="@+id/checkBox1"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:text="Th 6"
		                    android:visibility="invisible" />
		            </TableRow>
		        </TableLayout>
		    </LinearLayout>
			
		    <include layout="@layout/line" />
		    
		    <LinearLayout
		        android:id="@+id/monthLayout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical" >
		        
		        <TextView
			        android:id="@+id/textView"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="16sp"
			        android:text="Hàng tháng vào"
			        android:layout_marginBottom="10dp" />
		        
		        <RadioGroup
			        android:id="@+id/radioGrouLoopMonth"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" >
			
			        <RadioButton
			            android:id="@+id/radio0"
			            android:layout_width="wrap_content"
			            android:layout_height="45dp"
			            android:text="Vào cùng một ngày trong mỗi tháng" />
			
			        <RadioButton
			            android:id="@+id/radio1"
			            android:layout_width="wrap_content"
			            android:layout_height="45dp"
			            android:text="Vào mọi" />
			        
			    </RadioGroup>
		
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#ccc"
		        android:layout_marginTop="10dp" />
		       
		    
		<!-- ok / cancel -->
		
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="40dp"
			    android:orientation="horizontal" >

				<LinearLayout
				    android:id="@+id/cancel"
				    android:layout_width="wrap_content"
				    android:layout_weight="1"
				    android:layout_height="match_parent"
				    android:orientation="horizontal" >
			        
				    <TextView 
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="center"
				        android:text="Cancel"/>
				    
				</LinearLayout>

				<LinearLayout
				    android:layout_width="1dp"
				    android:layout_height="fill_parent"
				    android:background="#ccc"
				    android:orientation="horizontal" >
				</LinearLayout>

				<LinearLayout
				    android:id="@+id/ok"
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:layout_weight="1"
				    android:orientation="horizontal" >
				    
				    <TextView 
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:gravity="center"
				        android:text="Ok"/>
				    
				</LinearLayout>
			    
			</LinearLayout>
		
		</LinearLayout>
		
</ScrollView>